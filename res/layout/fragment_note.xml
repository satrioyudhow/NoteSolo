<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptr_scrollview"
        style="@style/ScrollView"
        android:fillViewport="true"
        android:isScrollContainer="true"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/ptr_save"
        ptr:ptrHeaderBackground="@android:color/transparent"
        ptr:ptrHeaderTextAppearance="@style/PullToSave"
        ptr:ptrMode="pullFromEnd"
        ptr:ptrRefreshableViewBackground="@drawable/card_bg" >

        <EditText
            android:id="@+id/note_text"
            style="@style/Note" />
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</FrameLayout>